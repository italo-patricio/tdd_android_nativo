<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/image_view_list_item"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="Imagem do leilÃ£o"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:src="@drawable/img_indisponivel"
        ></ImageView>

    <TextView
        android:id="@+id/text_description_list_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/text_value_list_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_view_list_item"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Console"
        ></TextView>

    <TextView
        android:id="@+id/text_value_list_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/text_description_list_item"
        app:layout_constraintStart_toStartOf="@+id/text_description_list_item"
        app:layout_constraintTop_toBottomOf="@id/text_description_list_item"
        android:layout_marginTop="8dp"
        android:lines="1"
        tools:text="R$ 300,00"
        android:textSize="24sp"
        android:textColor="@android:color/holo_green_dark"
        ></TextView>



</androidx.constraintlayout.widget.ConstraintLayout>